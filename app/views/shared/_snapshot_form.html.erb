<%= form_with(model: @snapshot, local: true) do |f| %>
    <div class="row">
        <div class="col-1">
            <div class="avatar_wrapper_f_snapshot">
                <%= image_tag @user.avatar if @user.avatar.attached? %>
            </div>
        </div>
        <div class="col-11">
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.text_area :content, placeholder: "Create a new post ...", class:"form_create_snapshot" %>
        </div>
        <div class="col-12"> <hr> </div>
        <div class="col-10">
            <%= f.file_field :image, class: "choose_file_snapshot fa-solid fa-image", style:"color: #383838;" %>
        </div>
        <div class="col-2">
            <%= f.submit "Đăng"%>
        </div>
    </div>
<% end %>

