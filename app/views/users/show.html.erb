<% provide(:title, "Profile") %>

<div class="row">
  <div class="col-3"></div>
  <div class="col-4 fixed_div_infor_user">
    <%= render 'users/user_infor' %>
  </div>

  <div class="col-1 back_pf">
    <% if @user.id != current_user.id %>
      <%= link_to user_path(current_user) do %>
        <div class="back_pf">
          <i class="fa-solid fa-arrow-left fa-xl"></i>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="col-4">
    <div class="my_container">
      <%= render 'snapshots/snapshot_form' %>
    </div><br>
    
    <div>
      <% if @user.snapshots.any? %>
        <%= render @snapshots %>
      <% else %>
        <div class="my_container snapshot_none">
          <center> Bạn chưa có bài đăng nào ... </center>
        </div>
      <% end %>
    </div>
  </div>

  
  <div class="col-3">
    <div class="my_container ">
      <h5>
        <center>
          <i class="fa-solid fa-bookmark" style="color: #2e2e2e;"></i> 
          <b>Đã lưu</b>
        </center>
      </h5>
      <hr>
      <%= render 'snapshots/user_save/snapshots' %>
      <%= render 'flashcards/user_save/flashcard' %>
    </div>
  </div>

  <div class="col-1"></div>
</div>