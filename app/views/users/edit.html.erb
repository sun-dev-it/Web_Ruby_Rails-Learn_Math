<% provide(:title, "Chỉnh sửa thông tin") %>


<div class="row">
  <div class="col-4">
    <%= render 'users/user_infor' %>
  </div>
  <div class="col-1"></div>
  <div class="col-4 my_container">
    <div class="">
      <center><h3>Chỉnh sửa thông tin</h3></center>
      <hr>
      <%= form_with(model: @user, local: true) do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <div class="row item_edit_pf">
          <div class="col-4">
            <%= form.label :name, "Tên"%>
          </div>
          <div class="col-8">
            <%= form.text_field :name %>
          </div>
          <div class="col-4">
            <%= form.label :email %>
          </div>
          <div class="col-8">
            <%= form.text_field :email %>
          </div>
          <div class="col-4">
            <%= form.label :password, "Mật khẩu" %>
          </div>
          <div class="col-8">
            <%= form.text_field :password %>
          </div>
          <div class="col-4">
            <%= form.label :password_confirmation, "Nhâp lại mật khẩu" %>
          </div>
          <div class="col-8">
            <%= form.text_field :password_confirmation %>
          </div>
          <div class="col-7"></div>
          <div class="col-5">
            <%= form.submit "Thay đổi", class:"change_edit_pf" %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>

  <div class="col-5 welcome"></div>
  <div class="col-1"></div>
</div>
