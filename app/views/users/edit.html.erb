<% provide(:title, "Chỉnh sửa thông tin") %>


<div class="row">
  <div class="col-1"></div>
  <div class="col-2">
    <%= render 'users/user_infor' %>
  </div>
  <div class="col-1"></div>
  <div class="col-4 my_container">
    <div class="">
      <center><h3>Chỉnh sửa thông tin</h3></center>
      <%= form_with(model: @user, local: true) do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <p>
          <%= form.label :name, "Tên"%>
          <%= form.text_field :name %>
        </p>
        <p>
          <%= form.label :email %>
          <%= form.text_field :email %>
        </p>
        <p>
          <%= form.label :password, "Mật khẩu" %>
          <%= form.text_field :password %>
        </p>
        <p>
          <%= form.label :password_confirmation, "Nhâp lại mật khẩu" %>
          <%= form.text_field :password_confirmation %>
        </p>
        <p>
          <%= form.submit "Thay đổi" %>
        </p>
      <% end %>
      
    </div>
  </div>

  <div class="col-5 welcome"></div>
  <div class="col-1"></div>
</div>
