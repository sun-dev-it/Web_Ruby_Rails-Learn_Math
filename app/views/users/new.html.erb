<% provide(:title, "Tạo tài khoản") %>

<div class="row">
  <div class="col-3"></div>
  <div class="col-6 row my_container">
    <div class="col-6">
      <h4>Tạo tài khoản</h4>
      <%= form_with(model: @user, local: true) do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <p>
          <%= form.label :name, "Tên" %>
          <%= form.text_field :name %>
        </p>

        <p>
          <%= form.label :email %>
          <%= form.text_field :email %>
        </p>

        <p>
          <%= form.label :password, "Mật khẩu" %>
          <%= form.text_field :password %>
        </p>

        <p>
          <%= form.label :password_confirmation, "Nhâp lại mật khẩu" %>
          <%= form.text_field :password_confirmation %>
        </p>
          
        <p> Ảnh đại diện <%= form.file_field :avatar %> </p>
          
          <p class=""> <%= form.submit "Tạo tài khoản" %> </p>
          <hr class="hr">
          <p class=""> <%= link_to "Đăng nhập", login_path %> </p>
        </ul>
      <% end %>
    </div>
    <div class="col-6">Welcome</div>
  </div>

  <div class="col-3"></div>
</div>
