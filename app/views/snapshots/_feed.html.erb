<% if @feed_items.any? %>
    <% @feed_items.each do |item| %>
        <div class="my_container">
            <div class="row">
                <div class="col-2">
                    <%= link_to item.user do %>
                        <div class="avatar_wrapper">
                            <%= image_tag item.user.avatar if item.user.avatar.attached? %>
                        </div>
                    <% end %>
                </div>
                <div class="col-10">
                    <div class="row">
                        <div class="col-10">
                            <%= item.user.name %>
                        </div>

                        <div class="col-2 menu"> 
                            <i class="fa-solid fa-ellipsis" style="color: #000000;"></i>
                            <div class="hide">
                                <% if current_user.admin? %>
                                    <%= button_to " Xóa", item, method: :delete, data: { confirm: "xoa" }, class:"fa-solid fa-trash", style:"color: #000000; background: none;" %>
                                <% end %>
                            </div>
                        </div>

                        <div class="col-12">
                            <small><i class="fa-solid fa-clock" style="color: #404040;"></i>  <%= time_ago_in_words(item.created_at) %> </small>
                        </div>
                    </div>
                </div>
                <div class="col-12 snapshot_padding">
                    <p class="content_snapshot"><%= item.content %></p>
                    <div class = "img_snapshot"> 
                        <%= image_tag item.image if item.image.attached? %> 
                        <i class="fa-regular fa-heart tim_snapshot"> </i> 0
                    </div>
                </div>
                <div class="col-4">

                
                    <%= render 'snapshots/like_form' if logged_in? %>


                </div>
                <div class="col-5">
                    <i class="fa-solid fa-comment" style="color: #4a4a4a;"></i> Bình luận
                </div>
                <div class="col-3">
                    <i class="fa-solid fa-share" style="color: #2b2b2b;"></i> Chia sẻ
                </div>
            </div>
        </div>
        <br>
      <% end %>
    <%= will_paginate @feed_items, params: { controller: :pages, action: :home } %>





<% end %>

