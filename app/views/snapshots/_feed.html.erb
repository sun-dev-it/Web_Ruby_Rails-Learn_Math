<% if @feed_items.any? %>
    <% @feed_items.each do |item| %>
        <div class="my_container">
            <div class="row">
                <div class="col-2">
                    <%= link_to item.user do %>
                        <div class="avatar_wrapper">
                            <%= image_tag item.user.avatar if item.user.avatar.attached? %>
                        </div>
                    <% end %>
                </div>
                <div class="col-10">
                    <div class="row">
                        <div class="col-10">
                            <%= item.user.name %>
                        </div>

                        <div class="col-2 menu"> 
                            <i class="fa-solid fa-ellipsis" style="color: #000000;"></i>
                            <div class="hide">
                                <% if current_user.admin? %>
                                    <%= button_to " Xóa", item, method: :delete, data: { confirm: "xoa" }, class:"fa-solid fa-trash", style:"color: #000000; background: none;" %>
                                <% end %>
                            </div>
                        </div>

                        <div class="col-12">
                            <small><i class="fa-solid fa-clock" style="color: #404040;"></i>  <%= time_ago_in_words(item.created_at) %> </small>
                        </div>
                    </div>
                </div>
                <div class="col-12 snapshot_padding">
                    <p class="content_snapshot"><%= item.content %></p>
                    <div class = "img_snapshot"> 
                        <%= image_tag item.image if item.image.attached? %> 
                    </div>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-4">
                    <%= render 'snapshots/like_form' if logged_in? %>
                </div>

                <div class="col-5">
                    <i class="fa-solid fa-comment" style="color: #4a4a4a;"></i> Bình luận (<%= item.comments.count %>)
                </div>
                <div class="col-3">
                    <i class="fa-solid fa-share" style="color: #2b2b2b;"></i> Chia sẻ
                </div>
            </div>

            <hr>

            <div class="row container_comment">
                <span class="col-12 text_cmt">Bình luận</span>
                <% item.comments.each do |comment| %>
                    <div class="col-1 fix_padding_col_cmt">
                        <%= link_to comment.user do %>
                            <%= image_tag comment.user.avatar, class:"avt_comment" if comment.user.avatar.attached? %>
                        <% end %>
                    </div>
                    <div class="col-9 fix_padding_col_cmt">
                        <div class="content_comment">
                            <li><strong><%= comment.user.name %></strong></li>
                            <%= comment.content %>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="menu_comment" onclick="show_div_click('delete_comment')">
                            <ul><i class="fa-solid fa-ellipsis" style="color: #000000;"></i></ul>
                            <div class="delete_comment">
                                <%= link_to "Delete", snapshot_comment_path(item, comment), method: :delete, data: { confirm: "Xóa bình luận?" } %>
                                <a>Thoát</a>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>


            <hr>

            <div class="row">
                <div class="col-2">
                    <div class="avatar_wrapper">
                        <%= image_tag @user.avatar if @user.avatar.attached? %>
                    </div>
                </div>
                <div class="col-10">
                    <div class="form_comment">
                        <%= form_with(model: [item, Comment.new], url: snapshot_comments_path(item)) do |form| %>
                            <div class="row">
                                <div class="col-12">
                                    <%= form.text_area :content %>
                                </div>
                                <div class="col-8"></div>
                                <div class="col-4">
                                    <span class="fix_btn_post_snapshot"><%= form.submit 'Bình luận', class:"post_snapshot fix_btn_comment" %></span>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>


        </div>
        <br>
      <% end %>
<% end %>

