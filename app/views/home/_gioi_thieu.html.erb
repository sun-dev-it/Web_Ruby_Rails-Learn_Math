<% if @grouped_flashcards %>
    <% @grouped_flashcards.each do |title, flashcards| %>
        <h2><%= title %></h2>
        <% flashcards.each do |flashcard| %>
            <div class="row">
                <div class="col-2">
                    <%= flashcard.hiragana %>
                </div>

                <div class="col-3">
                    <%= flashcard.kanji %>
                </div>

                <div class="col-3">
                    <%= flashcard.meaning %>
                </div>

                <div class="col-1">
                    <%= link_to 'Xóa flashcrad', flashcard_path(flashcard), method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>





